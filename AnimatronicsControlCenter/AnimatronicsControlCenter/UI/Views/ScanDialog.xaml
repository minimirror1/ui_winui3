<ContentDialog
    x:Class="AnimatronicsControlCenter.UI.Views.ScanDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Scan Devices"
    CloseButtonText="Close">

    <StackPanel Spacing="10" MinWidth="300">
        <StackPanel Orientation="Horizontal" Spacing="10">
            <NumberBox Header="Start ID" Value="{x:Bind ViewModel.StartId, Mode=TwoWay}" SpinButtonPlacementMode="Inline" Width="140"/>
            <NumberBox Header="End ID" Value="{x:Bind ViewModel.EndId, Mode=TwoWay}" SpinButtonPlacementMode="Inline" Width="140"/>
        </StackPanel>
        
        <TextBlock Text="{x:Bind ViewModel.Progress, Mode=OneWay}" HorizontalAlignment="Right"/>
        <ProgressBar Value="{x:Bind ViewModel.Progress, Mode=OneWay}" Maximum="100" Height="10"/>
        
        <Button Content="Start Scan" Command="{x:Bind ViewModel.StartScanCommand}" HorizontalAlignment="Stretch" Margin="0,10,0,0" IsEnabled="{x:Bind ViewModel.IsNotScanning, Mode=OneWay}"/>
    </StackPanel>
</ContentDialog>

